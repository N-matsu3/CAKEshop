<h1>新規投稿</h1>

<%= form_with model: @item, url:'/items' do |f| %>

  <h4>商品画像</h4>
  <%= f.file_field :image, accept: "image/*" %>

  <h4>商品名</h4>
  <%= f.text_field :name %>

  <h4>商品説明</h4>
  <%= f.text_area :introoduction %>

  <h4>ジャンル</h4>
  <!--%= f.select : :genre_id,[] include_blank: "選択して下さい" %-->

  <h4>税抜価格</h4>
  <%= f.text_field :price %>円

  <p><%= f.submit '新規登録' %></p>

<% end %>