<div class="container-fluid">
  <div class="row">
    <div class="col-12 mx-auto px-3 mt-5">
      <h3>商品新規登録</h3>

      <%= form_with model: @item, url: admin_items_path do |f| %>

        <h4>商品画像</h4>
        <%= f.file_field :image, accept: "image/*" %>

        <h4>商品名</h4>
        <%= f.text_field :name %>

        <h4>商品説明</h4>
        <%= f.text_area :introduction %>

        <h4>ジャンル</h4>
       <%= f.collection_select :genre_id,  Genre.all, :id, :name, include_blank: "選択してください" %>

        <%#= f.collection_select :保存先のカラム名, テーブル（モデル）名.all, :実際にDBに保存させるカラム名, :選択肢に用いるカラム名, include_blank: "選択して下さい" %>

        <h4>税抜価格</h4>
        <%= f.text_field :price %>円

        <p><%= f.submit '新規登録', class: "btn btn-success" %></p>

      <% end %>
    </div>
  </div>
</div>