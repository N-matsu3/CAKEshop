<div class="flash">
  <%= flash[:notice] %>
</div>

<h1>商品一覧</h1>

 <%= link_to '「+」', new_admin_item_path %>

 <table>
  <thead>
   <tr>
      <th>商品ID</th>
      <th>商品名</th>
      <th>税抜価格</th>
      <th>ジャンル</th>
    </tr>
   </thead>
   <tbody>
    <% @items.each do |item| %>
      <tr>
       <td><%= item.id %></td>
        <td><%= link_to admin_item_path(item) do %>
          <%= item.name %>
          <% end %></td>
          <td><%= item.price %></td>
        <td><%=item.genre_id %></td>
      </tr>
<% end %>
   </tbody>
  </table>