<h4>注文履歴一覧</h4>

<table>
 <thead>
  <tr>
   <th>購入日時</th>
   <th>購入者</th>
   <th>注文個数</th>
  </tr>
 </thead>
 <tbody>

<% @order_details.each do |order_detail| %>
  <tr>
   <td><%= order_detail.created_at.strftime('%Y/%m/%d/%T') %></td>
   <td><%= order_detail.order.customer.last_name %><%= order_detail.order.customer.first_name %></td>
   <td><%= order_detail.quantity %></td>
  </tr>
<% end %>
 </tbody>
</table>