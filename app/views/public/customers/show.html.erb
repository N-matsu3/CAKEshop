<div class="container">
  <div class="row">
    <div class="col-10 ml-1 mt-5">
      <h3 class="ml-5">マイページ</h3>

      <div><b>登録情報</b> <%= link_to "編集する", customers_information_edit_path , class: "btn btn-success ml-3"%></div>

        <table class="table mt-3">

          <thead class="thead-light">
            <tr><th scope="col">氏名</th><td><%= @customer.last_name %> <%= @customer.first_name %></td></tr>
            <tr><th scope="col">カナ</th><td><%= @customer.last_name_kana %> <%= @customer.first_name_kana %></td></tr>
            <tr><th scope="col">郵便番号</th><td><%= @customer.address %></td></tr>
            <tr><th scope="col">電話番号</th><td><%= @customer.telephone_number %></td></tr>
            <tr><th scope="col">メールアドレス</th><td><%= @customer.email %></td></tr>
          </thead>

        </table>

      <div><b>注文履歴</b><%= link_to "一覧を見る", orders_path, class: "btn btn-primary ml-3" %></div>

    </div>
  </div>
</div>

