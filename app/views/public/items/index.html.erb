<div class="container-fluid">
  <div class="row">

    <div class="mt-5 col-3">
      <div class="sidebar">
      <!--今回は時間が足りず実装していないが「ジャンル検索部分」-->
      </div>
    </div>

    <div class="mt-5 ml-1 col-9">
      <h3><b>商品一覧</b><small>(全<%= @items.all.count %>件）</small></h3>
      <div class="mt-3 ml-1 d-flex flex-wrap">
        <% @items.each do |item| %>
          <div class="mt-3 w-25">

            <% if item.image.attached? %>
              <%= image_tag item.image, size: "150x150" %>
            <% else %>
              <%= image_tag 'no_image', size: "150x150" %>
            <% end %>
            <br>

            <%= link_to item_path(item) do %>
              <%= item.name %>
            <% end %>
            </br>
            ￥<%= item.with_tax_price %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>