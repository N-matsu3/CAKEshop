<div class="container-fluid">
  <div class="row">
      <h4 class="col-12 mb-3">注文履歴詳細</h4>

        <div class="col-6">
          <div>
           <h5>注文情報</h5>
           <table class="table table-bordered">
            <tr><th>注文日</th>　<td><%= @order.created_at.strftime('%Y/%m/%d') %></td></tr>
            <tr><th>配送先</th><td><%= @order.post_code %></br>
                                   <%= @order.shipping_address %></br>
                                   <%= @order.shipping_name %></td></tr>
            <tr><th>支払方法</th><td><%= @order.payment_method_i18n %></td></tr>

           </table>
          </div>
      </div>

      <div class="ml-1 col-3 d-flex">
          <div>
           <h5>請求情報</h5>
           <table class="table table-bordered">
            <tr><th>商品合計</th>　<td><%= @order.with_tax_total_payment %>円</td></tr>
            <tr><th>配送料</th><td><%= @order.postage %>円</td></tr>
            <tr><th>ご請求額</th><td><%= @order.with_tax_total_payment + @order.postage %>円</td></tr>
           </table>
          </div>
      </div>

          <div class="col-6">
             <h5>注文内容</h5>
              <table class="table table-bordered">
                 <thead>
                    <tr>
                      <th>商品</th>
                      <th>単価（税込）</th>
                      <th>個数</th>
                      <th>小計</th>
                    </tr>
                 </thead>
                 <tbody>
                        <% @order.order_details.each do |order_detail| %>
                    <tr>
                      <td><%= order_detail.item.name %></td>
                      <td><%= order_detail.price %>円</td>
                      <td><%= order_detail.quantity %></td>

                      <td><%= order_detail.price * order_detail.quantity %>円</td>
                    </tr>
                    <% end %>
                 </tbody>
              </table>
          </div>

    </div>
  </div>
</div>