<h4>注文履歴一覧</h4>
  <table class="table table-bordered">
   <thead class="table-light">
    <tr>
     <th>注文日</th>
     <th>配送先</th>
     <th>注文商品</th>
     <th>支払金額</th>
     <th>注文詳細</th>
    </tr>
   </thead>
   <tbody>
    <% @orders.each do |order| %>
    <tr>
     <td><%= order.created_at.strftime('%Y/%m/%d') %></td>
     <td><%= order.post_code%>
         <%= order.shipping_address%>
         <%= order.shipping_name%>
     </td>
     <td><% order.order_details.each do |order_detail| %>
         <%= order_detail.item.name %></br>
         <% end %>
     </td>
     <td><%= order.with_tax_total_payment + order.postage %>円</td>
     <td><%= link_to "表示する", order_path(order), class: "btn btn-primary btn-sm" %></td>
    </tr>
     <% end %>
   </tbody>
  </table>





