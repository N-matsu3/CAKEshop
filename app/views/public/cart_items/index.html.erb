<h4>ショッピングカート</h4>

<div><%= link_to "カートを空にする", destroy_all_cart_items_path, method: :delete, "data-confirm" => "本当に空にしますか？" %></div>
<br>
<table>
    <thead>
      <tr>
        <th>商品名</th>
        <th>単価(税込み)</th>
        <th>数量</th>
        <th>小計</th>
        <th> </th>

      </tr>
    </thead>
    <tbody>
        <% @cart_items.each do |cart_item| %>
      <tr>

        <td><% if cart_item.item.image.attached? %>
                <%= image_tag cart_item.item.image, size: "50x50" %>
            <% else %>
                <%= image_tag 'no_image', size: "50x50" %>
            <% end %>
            <%= cart_item.item.name %></td>

        <td><%= cart_item.item.with_tax_price %></td>

        <td><%= form_with model: cart_item, url: @cart_items_path do |f| %>
            <%= f.select :amount, *[1..10],selected: cart_item.amount %>
            <%= f.hidden_field :item_id, :value => cart_item.item.id %>
            <%= f.submit '変更' %>
            <% end %></td>

        <td><%= cart_item.subtotal %></td>

        <td> <%= link_to "削除する", cart_item_path(cart_item.id), method: :delete %></td>
      </tr>

        <% end %>
    <tbody>
</table>
  ¥<%= @total.round.to_s(:delimited)%>

