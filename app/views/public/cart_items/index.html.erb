<h4>ショッピングカート</h4>



<table>
    <thead>
      <tr>
        <th>商品名</th>
        <th>単価(税込み)</th>
        <th>数量</th>
        <th>小計</th>
        <th> </th>
      </tr>
    </thead>
    <tbody>

      <tr>
         <% @cart_items.each do |cart_item| %>
        <td><% if cart_item.item.image.attached? %>
                <%= image_tag cart_item.item.image, size: "50x50" %>
            <% else %>
                <%= image_tag 'no_image', size: "50x50" %>
            <% end %>
            <%= cart_item.item.name %></td>
          <td><%= number_to_currency(cart_item.item.price, unit: "¥", strip_insignificant_zeros: true) %></td>
        <td><%= form_with model: cart_item, url: @cart_items_path do |f| %>
    <%= f.select :amount, *[1..10] %>
    <%= f.hidden_field :item_id, :value => cart_item.item.id %>
    <%= f.submit '変更' %>
    <% end %></td>
        <td></td>
        <td> <%= link_to "削除する", cart_items_path(@cart_item.id), method: :delete %></td>
      </tr>
    <tbody>
</table>
 <p></p>
 <% end %>