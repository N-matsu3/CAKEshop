<h2>Sign up</h2>

<%= form_with model:@customer, url: customer_registration_path do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>


<div class="field">
    <%= f.label :（姓） %>
    <%= f.text_field :last_name, autofocus: true, autocomplete: "last_name" %>

    <%= f.label :（名） %>
    <%= f.text_field :first_name, autofocus: true, autocomplete: "first_name" %>

</div>

<div class="field">
    <%= f.label :（セイ） %>
    <%= f.text_field :last_name_kana, autofocus: true, autocomplete: "last_name_kana" %>

    <%= f.label :（メイ） %>
    <%= f.text_field :first_name_kana, autofocus: true, autocomplete: "first_name_kana" %>

</div>

  <div class="field">
    <%= f.label :メールアドレス %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label :郵便番号（ハイフンなし）%>
    <%= f.text_field :postal_code, autofocus: true, autocomplete: "postal_code" %>
  </div>

  <div class="field">
    <%= f.label :住所%>
    <%= f.text_field :address, autofocus: true, autocomplete: "address" %>
  </div>

  <div class="field">
    <%= f.label :電話番号（ハイフンなし）%>
    <%= f.text_field :telephone_number, autofocus: true, autocomplete: "telephone_number" %>
  </div>

  <div class="field">
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="actions">
    <%= f.submit "新規登録" ,class: "btn btn-success btn-sm"%>
  </div>

<% end %>

<p>既に登録済みの方</p>
<%= render "devise/shared/links" %>